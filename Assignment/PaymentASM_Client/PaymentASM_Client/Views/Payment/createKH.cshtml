@model PaymentASM_Client.Models.KhachHang

@{
    ViewBag.Title = "Tạo khách hàng";
}

<h2>Tạo khách hàng</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
